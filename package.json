{
  "name": "tweries-app",
  "version": "0.27.6",
  "private": true,
  "description": "Tweries, a tweet-storm-helper app that breaks up a long paragraph into multiple tweets.",
  "dependencies": {
    "@amplitude/react-amplitude": "^1.0.0",
    "@auth0/auth0-spa-js": "^1.3.2",
    "amplitude-js": "^5.6.0",
    "autoprefixer": "^9.7.1",
    "classnames": "^2.2.6",
    "jest-fetch-mock": "^2.1.2",
    "postcss-cli": "^6.1.3",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-ga": "^2.7.0",
    "tailwindcss": "^1.1.3",
    "voca": "^1.4.0"
  },
  "scripts": {
    "build": "npm run build:css && react-scripts build",
    "build:css": "postcss src/styles/index.css -o src/index.css",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "prettier": "prettier 'src/**/*.{css,js,json}'",
    "prettier:fix": "npm run prettier -- --write",
    "start": "npm run watch:css & react-scripts start",
    "test": "react-scripts test",
    "watch:css": "postcss src/styles/index.css -o src/index.css -w"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^9.3.0",
    "gh-pages": "^2.1.1",
    "prettier": "^1.18.2",
    "react-scripts": "^3.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/hooks/useLocalStorage.js",
      "!src/constants.js",
      "!src/index.js",
      "!src/initializeReactGA.js",
      "!src/react-auth0-wrapper.js",
      "!src/serviceWorker.js"
    ]
  },
  "homepage": "https://tweries.com",
  "proxy": "http://localhost:9000"
}
